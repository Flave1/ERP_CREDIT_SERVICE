        @{
            if (Model.OfferLetterDetails.Signature != null)
            {
                var base64 = Convert.ToBase64String(Model.OfferLetterDetails.Signature);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                <p><img style="width:250px; height:100px;" src="@imgSrc" /></p>
